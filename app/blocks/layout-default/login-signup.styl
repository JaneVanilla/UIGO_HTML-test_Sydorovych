.signup
	max-width 665px
	margin 0 auto
	&__wrapper
		display flex
		flex-direction column
	&__content
		position relative
		padding-top 38.5px
		padding-bottom 32.5px
		padding-left 20.8px
		padding-right 22.5px
		margin 20px
		color: #111111
		background #fff url("../../assets/images/shape5.png") no-repeat bottom right
		background-position-x 100%
		background-position-y 100%
		background-size contain
		box-sizing border-box
		z-index 5



/****Sidebar****/

.sidebar
	position relative
	width 100%
	height 60px
	color #fff
	background #5A61ED
	box-sizing border-box

	span
		display block
		text-align center
		font-size 49px
		line-height 63px
		letter-spacing 0.5px
		white-space nowrap
		font-family 'PT Sans', sans-serif


/****Title****/
.title
	text-align center
	font-size 22px
	line-height 26px
	letter-spacing -0.46px
	font-weight 500
	font-family 'Work Sans', sans-serif

.title-addition
	text-align center
	display block
	margin-bottom 20px
	font-size 14px
	line-height 16px
	font-weight 300
	font-family 'Work Sans', sans-serif


/****Form****/

.form
	display flex
	flex-wrap wrap
	justify-content space-between


select
	-moz-appearance: none;
	-webkit-appearance: none;
	appearance: none;
	border none


.input-block
	border-bottom 0.7px solid #f2f2f2

.input-block
	position relative
	width 100%
	max-width 234.5px
	margin 0 auto
	margin-bottom 16.5px
	&__name
		display block
		margin-bottom 4.5px
		font-size 12px
		line-height 14px
		font-weight 300
		color #7C7C7C
		font-family 'Work Sans', sans-serif
	&__input
		width 100%
		border none
		outline none
		background transparent
	&__selects
		display flex
		justify-content space-between
	&__radio
		display flex
		label
			margin-right 19px
			margin-left 5px
	&__input::placeholder,
	&__radio label,
	select,
	input
		font-size 14px
		line-height 16px
		font-weight normal
		color #111111
		cursor pointer
		font-family: 'Work Sans', sans-serif;
	&__button
		padding 7px 23px
		margin-bottom 5px
		color #fff
		font-size 14px
		line-height 18px
		font-weight normal
		background #5A61ED
		border 0.5px solid #ffffff
		font-family 'PT Sans', sans-serif
	&__button:hover
		color #5A61ED
		background #ffffff
		border 0.5px solid #5A61ED
		transition 3s

.input-block__bottom
		width 100%
		display flex
		justify-content space-between
		flex-direction column-reverse
		align-items center
		margin-top 98px

.user-block
	&__question,
	&__link
		font-size 13px
		line-height 15px
		font-family 'Work Sans', sans-serif
	&__question
		color #000000
		font-weight 300
	&__link
		padding-left 5px
		color  #5A61ED
		font-weight 500
		text-decoration underline
		cursor: pointer;
	&__link:hover
		transition 3s
		text-decoration none
		color green

/****Custom radio buttons****/
.input-block__radio input
	position relative
	width auto
	z-index 10
	opacity 0
	cursor pointer
[type="radio"]:checked + label,
[type="radio"]:not(:checked) + label
	position relative
	display inline-block


[type="radio"]:checked + label:before,
[type="radio"]:not(:checked) + label:before
	content ''
	position absolute
	left -18px
	top 0
	width 12px
	height 12px
	border-radius 100%
	background #fff
	border 0.7px solid #5A61ED
	cursor pointer

[type="radio"]:checked + label:after,
[type="radio"]:not(:checked) + label:after
	content ''
	width 6.3px
	height 6.3px
	background #5A61ED
	position absolute
	top 4px
	left -14.5px
	border-radius 100%
	-webkit-transition all 0.2s ease
	transition all 0.2s ease
	cursor pointer

[type="radio"]:not(:checked) + label:after
	opacity 0
	-webkit-transform scale(0)
	transform scale(0)

[type="radio"]:checked + label:after
	opacity 1
	-webkit-transform scale(1)
	transform scale(1)

/***Input mail decoration***/
input[type="email"]
	position relative
.mail-decoration
		display inline-block
		position  absolute
		content ""
		right 0
		width 11px
		height 8px
		background url("../../assets/images/Shape.png")
		background-size cover

/***Custom Select***/
.input-block__selects
	.select-decoration
		position relative
		top 5px
		width 10px
		height 10px
		background url("../../assets/images/Shape-2.png") no-repeat

/*** Desktop ***/
@media screen and (min-width: 768px)
	.signup
		padding-top 60px
		&__wrapper
			display flex
			flex-direction row
		&__content
			margin 0 auto
			width: 527.8px
			max-width unset
			background-position-y 120%
			background-size cover
	.sidebar
		width 137.2px
		height unset
		span
			position absolute
			left 18.4px
			bottom 72px
			text-align unset
			transform rotate(-90deg)

	.input-block
		width 50%

	.input-block__bottom
		flex-direction row
	.input-block__button
		margin-bottom 0

	.title,
	.title-addition
		text-align left
